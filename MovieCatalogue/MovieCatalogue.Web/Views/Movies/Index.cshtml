@model List<MovieCatalogue.Domain.DomainModels.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Movies" asp-action="Create">Add new Movie</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 20rem;">
                    

                    <div class="card-body">
                        <img class="card-img-top" src="@item.Picture" style="height: 85%" alt="Image for product!" />
                        <h3 class="card-title">@item.Title</h3>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>



            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>